<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.classbuddy.controller.StudentDashboardController">

    <stylesheets>
        <String fx:value="@../css/dashboard.css" />
    </stylesheets>

    <!-- TOP HEADER -->
    <HBox alignment="CENTER_LEFT" layoutX="0.0" layoutY="0.0" prefHeight="70.0" prefWidth="1000.0" spacing="20.0" styleClass="dashboard-header">
        <padding>
            <Insets bottom="0.0" left="20.0" right="20.0" top="0.0" />
        </padding>
        <children>
            <Label styleClass="dashboard-title" text="Student Dashboard">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
            <javafx.scene.layout.Region HBox.hgrow="ALWAYS" />
            <Label fx:id="studentNameLabel" styleClass="admin-name-label" text="Student">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <Button onAction="#handleLogout" styleClass="btn-logout" text="Logout" />
        </children>
    </HBox>

    <!-- MAIN CONTENT -->
    <VBox layoutY="70.0" prefHeight="630.0" prefWidth="1000.0" spacing="15.0" styleClass="dashboard-content">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <!-- Title -->
            <Label styleClass="section-title" text="My Classrooms">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>

            <!-- Action Buttons -->
            <HBox spacing="15.0">
                <children>
                    <Button onAction="#goToJoinClassroom" prefWidth="180.0" styleClass="btn-primary" text="ðŸ”— Join Classroom" />
                    <Button onAction="#initialize" prefWidth="120.0" styleClass="btn-tertiary" text="ðŸ”„ Refresh" />
                </children>
            </HBox>


            <ScrollPane fitToWidth="true" styleClass="scroll-pane">
                <VBox fx:id="classroomsContainer" spacing="12.0" styleClass="classrooms-list" />
            </ScrollPane>
        </children>
    </VBox>
</AnchorPane>